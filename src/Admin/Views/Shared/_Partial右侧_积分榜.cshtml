
<div class='panel'>
	<div class='header'>
		<span class='col_fade'>积分榜</span>
		&nbsp;
		<a class='dark' href='/users/top100'>TOP 100 &gt;&gt;</a>
	</div>
	<div class='inner'>
		<ol>
			@foreach (UsersInfo u in ViewBag.users_rank10) {
				<li>
					<span class='top_score'>@u.Point</span>
					<span class="user_name"><a href="/user/@u.Username">@u.Username</a></span>
				</li>
			}
		</ol>
	</div>
</div>