
<div class='panel'>
	<div class='header'>
		<span class='col_fade'>作者其它话题</span>
	</div>
	<div class='inner'>
		<ul class="unstyled">
			@foreach (TopicsInfo topic in ViewBag.author_recent_topics) {
				<li>
					<div>
						<a class='dark topic_title' href="/topic/@topic.Id" title="@topic.Title">@topic.Title</a>
					</div>
				</li>
			}
		</ul>
	</div>
</div>