@{ 
	var user = ViewBag.user as UsersInfo;
}

@if (user == null) {
	<div class='panel'>
		<div class='inner'>
			<p>CNode：Node.js专业中文社区</p>

			<div>
				您可以
				<a href='/signin'>登录</a>
				或
				<a href='/signup'>注册</a>
				, 也可以
				<a href="/auth/github">
					<span class="span-info">
						通过 GitHub 登录
					</span>
				</a>
			</div>
		</div>
	</div>
} else {
	ViewData["_Partial右侧_用户信息_title"] = "个人信息";
	await Html.RenderPartialAsync("_Partial右侧_用户信息", user);
}